@model MVC.DTO.EmployeeDTO

<form asp-controller="Employee" asp-action="GetDeleteEmployee" method="post" class="text-start">
    <div class="mb-3">
        <label for="exampleInputID" class="form-label">ID</label>
        <input asp-for="Id" type="text" class="form-control" id="exampleInputID" aria-describedby="IDHelp">
    </div>
    <div class="text-end">
        <button type="submit" class="btn btn-primary">Get Employee</button>
    </div>
</form>

<form asp-controller="Employee" asp-action="DeleteEmployee" class="text-start">
    <input asp-for="Id" type="hidden" />
    <div class="mb-3">
        <label for="exampleInputName" class="form-label">Name</label>
        <input readonly asp-for="name" type="text" class="form-control" id="exampleInputName" aria-describedby="nameHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputAge" class="form-label">Age</label>
        <input readonly asp-for="age" type="text" class="form-control" id="exampleInputAge" aria-describedby="AgeHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputSalary" class="form-label">Salary</label>
        <input readonly asp-for="salary" type="text" class="form-control" id="exampleInputSalary" aria-describedby="SalaryHelp">
    </div>


    <button type="submit" class="btn btn-danger">Delete</button>


</form>